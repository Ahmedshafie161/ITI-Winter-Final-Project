<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    android:background="#00BCD4"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image_View"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="124dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/shop_row_location"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/shop_row_shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@android:drawable/ic_lock_power_off"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/shop_row_location"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shop_row_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="157dp"
        android:text="Location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_row_shopName" />

    <TextView
        android:id="@+id/shop_row_telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="152dp"
        android:text="Telephone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/shop_row_location"
        app:layout_constraintTop_toBottomOf="@+id/shop_row_shopName" />

    <TextView
        android:id="@+id/shop_row_lastVisit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Last Visit"
        app:layout_constraintStart_toStartOf="@+id/shop_row_telephone"
        app:layout_constraintTop_toBottomOf="@+id/shop_row_telephone" />

</androidx.constraintlayout.widget.ConstraintLayout>